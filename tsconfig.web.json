{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["es5", "es6", "dom", "DOM.Iterable"],
        "module": "commonjs",
        "outDir": "./build/renderer",
        "resolveJsonModule": true,
        "strict": false,
        "strictNullChecks": false,
        "target": "es6",
        "types": ["react", "react-dom", "styled-components"]
    },
    "include": [
        "./source/renderer/**/*",
        "./source/shared/**/*"
    ],
    "exclude":[
        "build",
        "dist",
        "node_modules"
    ]
}
