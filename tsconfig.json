{
    "compilerOptions": {
        "esModuleInterop": true,
        "lib": ["es5", "es6", "dom", "DOM.Iterable"],
        "module": "commonjs",
        "outDir": "./build",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": false,
        "strictNullChecks": false,
        "target": "es6",
        "types": ["node", "jest"]
    },
    "include": [
        "./source/main/**/*",
        "./source/shared/**/*"
    ],
    "exclude": [
        "build",
        "dist",
        "node_modules"
    ]
}
